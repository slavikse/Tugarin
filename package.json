{
  "name": "tugarin",
  "productName": "Tugarin",
  "version": "0.0.5",
  "description": "Tugarin Game",
  "main": "./.webpack/main",
  "scripts": {
    "serve": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "author": {
    "name": "slavikse",
    "email": "gslavikse@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./public/logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "authors": "slavikse",
            "setupExe": "Tugarin.exe",
            "setupIcon": "./public/logo.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.config.js",
            "renderer": {
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/renderer.js",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.47",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.47",
    "@electron-forge/maker-zip": "^6.0.0-beta.47",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.47",
    "electron": "^7.1.7",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^1.5.1",
    "electron-squirrel-startup": "^1.0.0"
  }
}
