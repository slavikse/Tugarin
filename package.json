{
  "name": "tugarin",
  "productName": "Tugarin",
  "version": "0.1.1",
  "description": "Tugarin Game",
  "main": "./.webpack/main",
  "scripts": {
    "serve": "electron-forge start",
    "build": "electron-forge publish"
  },
  "author": {
    "name": "slavikse",
    "email": "gslavikse@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./public/assets/logo.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Tugarin",
            "authors": "slavikse",
            "setupExe": "Tugarin.exe",
            "setupIcon": "./public/assets/logo.ico"
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.config.js",
            "renderer": {
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/app.js",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.50",
    "electron": "^8.2.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
